engine-strict=true
save-exact=true
package-lock=false
use-pnpm=true
save-prefix=""

# Force all project dependencies to use a single copy of React
legacy-peer-deps=true
strict-peer-dependencies=false
# Dedupe React packages
dedupe-peer-dependencies=react,react-dom
# Ensure React is resolved from the root level
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
